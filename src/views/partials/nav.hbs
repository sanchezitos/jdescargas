            </form>
            </div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav mr-auto">

                </ul>
                <ul class="navbar-nav ml-auto">
                    {{#if user}}
                   <script>
                        if('{{user.typeuser}}' == 'user'){
                            document.write('<li class="nav-item"><button type="button" class="btn btn-light side" data-toggle="modal" data-target="#note">Añadir nota</button></li>');
                        }
