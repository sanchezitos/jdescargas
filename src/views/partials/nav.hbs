        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container">
		<div class="d-none d-md-block d-lg-block" style="width: 500px;">
	      <form action="/index" method="GET" class="form-inline my-2 my-lg-0">
                <input style="position:relative; width:100%;" class="form-control mr-sm-2 side" type="search" name="s"
