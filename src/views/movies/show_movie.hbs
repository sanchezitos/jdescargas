<div class="row">
    <div class="col-10 card side">
        <div class="row">
            <div class="col-md-9">
              <hr>
                <h3>{{movie.title}} ({{movie.year}})</h3>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <img style="width:100%; height:100%; " src="/upload/{{movie.filename}}">

            </div>
            <div class="col-md-8">
                <span><b>Sinopsis</b></span>
                <p>{{movie.description}}</p>
                <hr>
                <button class="btn btn-block btn-dark" data-toggle="modal" data-target="#exampleModalCenter">TRAILER</button>
                <hr>
                <span><b>Genero:</b> {{movie.category}}</span><br>
                <span><b>Duración:</b> {{movie.duration}}</span><br>
                <span><b>Año de lanzamiento:</b> {{movie.year}}</span><br>
                <span> <i class="fas fa-eye"></i> {{movie.views}} vistas • <i class="fas fa-thumbs-up"></i>
                    {{movie.likes}} me gusta</span><br>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-4">
                {{{movie.link_view}}}

            </div>
        </div>
    </div>
</div>


<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Trailer pelicula: {{movie.title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          {{{movie.trailer}}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>