{{#if movie}}

<!--Editar pelicula -->
<div class="card p-4 col-md-10">
    <h3>{{movie.title}}</h3>
    <div class="card-body">
        <form action="/movies/edit_movie/{{movie._id}}?_method=PUT" method="POST">
            <label for="image">Imagen de portada <b>(Tenga en cuenta que esta imagen no se puede cambiar)</b></label>
            <div
                style="background-size: cover; width: 200px; height: 200px; background-image: url('/upload/{{movie.filename}}'">
            </div>
            <hr>
            <div class="form-group">
                <label for="title">Titulo</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Titulo de la pelicula"
                    value="{{movie.title}}" required>
            </div>
            <div class="form-group">
                <label for="description">Descripción</label>
                <textarea class="form-control" rows="5" id="description" name="description"
                    placeholder="Descripción de la pelicula" required>{{movie.description}}</textarea>
            </div>
            <div class="form-row">
                <div class="col-md-2">
                    <label for="description">Año</label>
                    <select class="form-control" name="year" id="year">
                        <script>
                            var d = new Date();
                            var n = d.getFullYear();
                            for (var i = n; i >= 1970; i--)
                                document.write('<option value="' + i + '">' + i + '</option>');
                        </script>
                    </select>
                    <label for="description" style="color: gray;">Año actual: {{movie.year}}</label>
                </div>
                <div class="form-group col-md-9">

                    <label for="email">Categoria</label><br>

                    <div class="form-check form-check-inline">
                        <input class="form-control-input" type="checkbox" id="accion" name="accion" value="accion">
                        <label class="form-check-label" for="inlineCheckbox1">Accion</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="infantil" name="infantil" value="infantil">
                        <label class="form-check-label" for="inlineCheckbox1">Infantil</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="comedia" name="comedia" value="comedia">
                        <label class="form-check-label" for="inlineCheckbox1">Comedia</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="terror" name="terror" value="terror">
                        <label class="form-check-label" for="inlineCheckbox1">Terror</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="ficcion" name="ficcion"
                            value="ciencia-ficcion">
                        <label class="form-check-label" for="inlineCheckbox1">Ciencia ficción</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="aventura" name="aventura" value="aventura">
                        <label class="form-check-label" for="inlineCheckbox1">Aventura</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="suspenso" name="suspenso" value="suspenso">
                        <label class="form-check-label" for="inlineCheckbox1">Suspenso</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="romance" name="romance" value="romance">
                        <label class="form-check-label" for="inlineCheckbox1">Romance</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="fanatasia" name="fantasia" value="fantasia">
                        <label class="form-check-label" for="inlineCheckbox1">Fantasia</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="drama" name="drama" value="drama">
                        <label class="form-check-label" for="inlineCheckbox1">Drama</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="animacion" name="animacion"
                            value="animacion">
                        <label class="form-check-label" for="inlineCheckbox1">Animación</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="crimen" name="crimen" value="crimen">
                        <label class="form-check-label" for="inlineCheckbox1">Crimen</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="misterio" name="misterio" value="misterio">
                        <label class="form-check-label" for="inlineCheckbox1">Misterio</label>
                    </div>
                    <br>
                    <label style="color: gray">Categoria(s) actuales: {{movie.category}}.</label>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-2" style="margin-right: 30px;">
                    <label for="duration">Duración</label><br>
                    <input type="time" class="form-control" name="duration" value="{{movie.duration}}" required>
                </div>
            </div>
            <label style="color: gray" for="duration">Duración actual: {{movie.duration}} horas</label>
            <button type="submit" class="btn btn-block btn-light"><i class="fa fa-upload"></i>Actualizar
                pelicula</button>
        </form>
    </div>
</div>
<br>
<!--Añadir links a pelicula -->

<br>
<!--Eliminar pelicula -->
<div class="card p-4 col-md-10">
    <h3 style="padding: 10px;">Eliminar pelicula</h3>
    <hr>
    <p>¿Realmente desea eliminar la pelicula: <b>{{movie.title}}</b> ?</p>
    <form action="/movies/delete_movie/{{movie._id}}?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <button class="btn btn-danger btn-block" type="submit"><i class="far fa-trash-alt"></i> Eliminar
            pelicula</button>

</div>

{{/if}}